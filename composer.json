
{
    "name": "pen-y-fan/hello-world-php8",
    "description": "Example of a PHP8+ only project",
    "license": "MIT",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "HelloWorld\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HelloWorld\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "tests": "phpunit"
    }
}
